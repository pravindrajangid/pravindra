#include <iostream>
using namespace std;

void heapify(int arr[], int n, int i) { int largest = i;
int l = 2 * i + 1; int r = 2 * i + 2;

if (l < n && arr[l] > arr[largest]) largest = l;
if (r < n && arr[r] > arr[largest]) largest = r;

if (largest != i) { int temp = arr[i];
arr[i] = arr[largest]; arr[largest] = temp; heapify(arr, n, largest);
}
}

void buildMaxHeap(int arr[], int n) {
for (int i = n / 2 - 1; i >= 0; i--) { heapify(arr, n, i);
}
}

int main() {
int n;
cout << "Enter number of elements: "; cin >> n;
int arr[100];
cout << "Enter " << n << " elements: "; for (int i = 0; i < n; i++) {
cin >> arr[i];
}

buildMaxHeap(arr, n);

cout << "Array after building max heap: "; for (int i = 0; i < n; i++) {
cout << arr[i] << " ";
}
return 0;
}
