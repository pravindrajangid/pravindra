// Program 4: Binary search (iterative)
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int binarySearch(const vector<int>& a, int key){
    int l=0, r=a.size()-1;
    while(l<=r){
        int m = l + (r-l)/2;
        if(a[m]==key) return m;
        else if(a[m]<key) l = m+1;
        else r = m-1;
    }
    return -1;
}

int main(){
    int n; cout<<"n: "; cin>>n;
    vector<int> a(n);
    for(int i=0;i<n;i++) cin>>a[i];
    sort(a.begin(), a.end());
    int key; cout<<"Key: "; cin>>key;
    int idx = binarySearch(a,key);
    if(idx!=-1) cout<<"Found at index "<<idx<<"\n"; else cout<<"Not found\n";
    return 0;
}
