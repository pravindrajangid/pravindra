#include <iostream>
using namespace std;

long long fact(int n){
    if(n<=1) return 1;
    return n * fact(n-1);
}

int main(){
    int n; cout<<"Enter number: "; cin>>n;
    if(n<0) { cout<<"Factorial not defined for negative\n"; return 0; }
    cout<<"Factorial of "<<n<<" = "<<fact(n)<<"\n";
    return 0;
}
